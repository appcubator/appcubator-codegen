{% set requests = imports['utils.requests'] %}

{% set api_key = locals['api_key'] %}

def send_email(from_email, to_email, subject, text, html):
  email_info = {
    'from_email' : from_email,
    'to_email' : to_email,
    'subject' : subject,
    'text' : text,
    'html' : html,
    'api_key' : '{{ api_key }}'
  }

  post("http://appcubator.com/sendhostedemail/", data=email_info)
